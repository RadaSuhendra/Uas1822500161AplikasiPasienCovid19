<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#00FFFF">

        <TextView
            android:id="@+id/teks2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@id/teks2"
            android:paddingTop="20dp"
            android:text="APLIKASI PENDATAAN PASIEN COVID19"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/purple_700"
            android:textSize="45sp"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/teks1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks1"
            android:paddingTop="20dp"
            android:text="Selamat datang, Admin"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tambah"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:onClick="tambah"

                tools:ignore="OnClick"
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/lihat"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:onClick="lihat"
                tools:ignore="OnClick"
                app:srcCompat="@android:drawable/ic_menu_save" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tambah Pasien"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lihat Data pasien"
                android:textAlignment="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KELUAR"
            android:onClick="keluar"
            tools:ignore="OnClick" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>